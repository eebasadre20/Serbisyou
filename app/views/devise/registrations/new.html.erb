<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
         <div class="row col-lg-offset-3 col-md-offset-3 col-sm-offset-2 col-xs-offset-3" style="margin-top:5%;">
         	<h1 class="ui left floated header signup-header">Lets get started!</h1>
        </div>
    </div>
</div>

<div clas="row">
  <div class="col-lg-7 col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
  	<h3>Sign up and lets get your services today.</h3>
  </div>
</div>

<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-10 col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
    	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  		<%= f.error_notification %>
	    <div class="panel panel-default">
	    	  <div class="form-group">
	                <label class="client-label">Firstname</label>
	                  <%= f.input :firstname, input_html: { class: "form-control signup-field" }, required: true, label: false, autofocus: true %>
	          </div>
	          <div class="form-group">
	                <label class="client-label">Lastname</label>
	                <%= f.input :lastname, input_html: { class: "form-control signup-field" }, required: true, label: false %>
	          </div>
	          <div class="form-group">
	                <label class="client-label">Email Address</label>
	                  <%= f.input :email, input_html: { class: "form-control signup-field" }, required: true, label: false %>
	          </div>
	          <div class="form-group">
	                <label class="client-label">Password</label>
	                <%= f.input :password, input_html: { class: "form-control signup-field" }, required: true, label: false, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
	          </div>
	          <div class="form-group">
	                <label class="client-label">Password Confirmation</label>
	                <%= f.input :password_confirmation, input_html: { class: "form-control signup-field" }, required: true, label: false %>
	          </div>
	          <div class="form-group">
	                <label class="client-label">Contact Number</label>
	                  <%= f.input :contact_number, input_html: { class: "form-control signup-field" }, required: true, label: false %>
	          </div>
	          <div class="form-group">
	            <button class="btn btn-lg btn-success signup-btn" type="submit">Login</button>  
	          </div>
			<% end %>
	    </div>
    </div>
</div>
