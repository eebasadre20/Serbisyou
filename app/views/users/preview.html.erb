        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">New message</h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="control-label">Recipient:</label>
            <input type="text" class="form-control" ng-model="message.recipient" id="recipient-name" disabled/>
          </div>
          <div class="form-group">
            <label for="recipient-name" class="control-label">From:</label>
            <input type="text" class="form-control" ng-model="message.from" id="recipient-name" disabled/>
          </div>
          <div class="form-group">
            <label for="message-text" class="control-label">Message:</label>
            <textarea class="form-control" ng-model="message.messageText" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" ng-click="sendMessage( )">Send message</button>
      </div>
    </div>
  </div>
</div>
