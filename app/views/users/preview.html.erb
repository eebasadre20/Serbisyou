	<h4>Comments</h4>
	<hr/>
	<div class="row" comment-box>
		<div class="col-md-6">
			<!-- <div vote-box></div> -->

			<% if session[:user_id] %>
			<div><form ng-submit="commentSubmit( )">
				<div class="form-group">				
					<textarea name="comment" class="form-control" rows="3" ng-model="commentContent"></textarea>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary pull-right">Comment</button>
				</div>
			</form></div>
			<% end %>

			<div class="comment-body"dir-paginate="comment in comments| itemsPerPage: 5 | orderBy:predicate:reverse">
				<div class="comment-list">
					<p class="comment-user">{{comment.commentor}}</p>
					<p class="comment-content"> - {{comment.content}}</p>
					<p class="comment-date pull-right">{{comment.created_at | date:'medium'}}<p>
					<hr/>
				</div>
			</div>

			<dir-pagination-controls boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="/assets/dirPagination.tpl.html"></dir-pagination-controls>

