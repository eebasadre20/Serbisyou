	<div class="row">
		<div class="col-md-6">
			<div class="col-md-12">
				<center> <%#= image_tag @serviceprovider.avatar_url(:thumb).to_s, class: "img-circle profile-img img-responsive" %>
				<h1>{{ serviceProviderDetails.personal.firstname }} {{ serviceProviderDetails.personal.lastname }}<%#= @serviceprovider.firstname %> <%#= @serviceprovider.lastname %></h1></center>

			</div>
			<div class="col-md-6">
				<h4>Skills</h4>
				<hr />
				<div class="row profile-works">
				  <div class="col-xs-6 col-md-3" ng-repeat="skill in  serviceProviderDetails.skillset">
				   		{{ skill.name }}
				  </div>
				</div>
			</div>

			<div class="col-md-6">
				<h4>Clearances</h4>
				<hr />
				<div class="row profile-works">
				  <div class="col-xs-6 col-md-3" ng-repeat="clearance in  serviceProviderDetails.clearances">
				   		{{ clearance.name }}
				  </div>
				</div>
			</div>

